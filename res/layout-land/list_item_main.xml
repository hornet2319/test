<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/list_img"
        android:layout_width="@dimen/list_icon_width_land"
        android:layout_height="@dimen/list_icon_size_land"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/list_header"
        android:paddingTop="4dp"
        android:paddingRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/list_header_maxHeight_land"
        android:textSize="@dimen/list_header_textsize_land"
        android:layout_alignTop="@id/list_img"
        android:paddingLeft="8dp"
        android:layout_toRightOf="@+id/list_img"
        android:text="Включите Интернет пожалуйста"/>
    <TextView
        android:id="@+id/list_cath"
        android:paddingBottom="3dp"
        android:paddingLeft="7dp"
        android:textColor="@color/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_img"
        android:layout_alignLeft="@+id/list_header"
        android:textSize="@dimen/list_textsize_land"
        />
    <TextView
        android:paddingBottom="3dp"
        android:id="@+id/list_time"
        android:textSize="@dimen/list_hour_textsize_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/list_cath"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_alignBottom="@+id/list_img"
        />


</RelativeLayout>