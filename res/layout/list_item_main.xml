<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_icon_size">
<ImageView
    android:id="@+id/list_img"
    android:layout_centerVertical="true"
    android:layout_width="@dimen/list_icon_width"
    android:layout_height="55dp"
    android:scaleType="fitXY"
    android:layout_alignParentLeft="true"/>
 <TextView
     android:id="@+id/list_header"
     android:layout_marginTop="8dp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:maxHeight="@dimen/list_header_maxHeight"
     android:textSize="@dimen/list_header_textsize"
     android:paddingLeft="6dp"
     android:text="Включите Интернет пожалуйста"
     android:layout_alignParentTop="true"
     android:layout_toRightOf="@+id/list_img"
     android:layout_toEndOf="@+id/list_img" />
 <TextView
     android:id="@+id/list_cath"
     android:paddingBottom="3dp"
     android:paddingLeft="6dp"
     android:textColor="@color/orange"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="@dimen/list_textsize"
     android:layout_alignParentBottom="true"
     android:layout_toRightOf="@+id/list_img"
     android:layout_toEndOf="@+id/list_img" />
  <TextView
      android:paddingBottom="3dp"
      android:id="@+id/list_time"
      android:textSize="@dimen/list_hour_textsize"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingRight="5dp"
      android:paddingLeft="10dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true" />


</RelativeLayout>